{
  "name": "@berlysia/eslint-config",
  "version": "4.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "lint": "run-p 'lint:*'",
    "lint:eslint": "eslint './**/*.{js,ts}'",
    "lint:prettier": "prettier . --check",
    "fix": "run-s fix:eslint fix:prettier",
    "fix:eslint": "yarn lint:eslint --fix",
    "fix:prettier": "yarn lint:prettier --write",
    "format": "prettier '*.{json,md}'",
    "test:typescript": "node ./tools/typescript/verify",
    "test:prettier": "eslint-config-prettier tests/dummy.ts",
    "test:unset": "eslint-find-rules -u './tests/all.js'",
    "test:auto": "node ./auto.js",
    "test": "run-p 'test:*'",
    "projtest:tsproj": "yarn workspace tsproject lint",
    "projtest:jsproj": "yarn workspace jsproject lint",
    "projtest": "run-s 'projtest:*'",
    "ci": "run-s lint test projtest",
    "prepare": "git config --local core.hooksPath .githooks && echo 'githooks installed' || echo 'githooks install failed'"
  },
  "workspaces": [
    "tests/jsproject",
    "tests/tsproject"
  ],
  "keywords": [
    "eslint",
    "eslintconfig"
  ],
  "author": "berlysia",
  "license": "MIT",
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.0.4",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-sonarjs": "^0.18.0",
    "eslint-plugin-unicorn": "^46.0.0",
    "read-pkg-up": "^7.0.1"
  },
  "devDependencies": {
    "@babel/eslint-parser": "7.11.0",
    "@types/jest": "^29.2.3",
    "eslint": "8.36.0",
    "eslint-find-rules": "4.1.0",
    "jest": "29.5.0",
    "lint-staged": "13.0.3",
    "npm-run-all": "4.1.5",
    "prettier": "2.8.4",
    "typescript": "4.9.3"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@3.4.1",
  "peerDependencies": {
    "eslint": "*"
  }
}
