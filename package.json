{
  "name": "@berlysia/eslint-config",
  "version": "4.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsup 'src/**' --format esm,cjs --clean --dts",
    "stub": "tsup 'src/**' --format cjs",
    "dev": "tsup 'src/**' --format esm,cjs --watch & eslint-flat-config-viewer",
    "lint": "run-s stub && run-p 'lint:*'",
    "lint:eslint": "eslint './**/*.{js,ts}' --ignore-pattern 'tests'",
    "lint:prettier": "prettier . --check",
    "fix": "run-s stub fix:eslint fix:prettier",
    "fix:eslint": "yarn lint:eslint --fix",
    "fix:prettier": "prettier . --write",
    "format": "prettier '*.{json,md}'",
    "test:typescript": "node ./tools/typescript/verify",
    "test:prettier": "eslint-config-prettier tests/dummy.ts",
    "test:unset": "eslint-find-rules -u './tests/all.js'",
    "test:auto": "node ./dist/auto.js",
    "test": "run-s stub && run-p 'test:*'",
    "projtest:tsproj": "yarn workspace tsproject lint",
    "projtest:jsproj": "yarn workspace jsproject lint",
    "projtest": "run-s 'projtest:tsproj'",
    "ci": "run-s lint test projtest",
    "prepare": "git config --local core.hooksPath .githooks && echo 'githooks installed' || echo 'githooks install failed'"
  },
  "workspaces": [
    "tests/jsproject",
    "tests/tsproject"
  ],
  "keywords": [
    "eslint",
    "eslintconfig"
  ],
  "author": "berlysia",
  "license": "MIT",
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.5.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.0.4",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-sonarjs": "^0.23.0",
    "eslint-plugin-unicorn": "^49.0.0",
    "local-pkg": "^0.5.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "7.22.15",
    "@types/eslint": "^8.44.6",
    "@types/jest": "^29.2.3",
    "eslint": "8.53.0",
    "eslint-find-rules": "4.1.0",
    "eslint-flat-config-viewer": "^0.1.0",
    "jest": "29.7.0",
    "lint-staged": "15.0.2",
    "npm-run-all": "4.1.5",
    "prettier": "3.0.3",
    "tsup": "^7.2.0",
    "typescript": "5.2.2"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@4.0.1",
  "peerDependencies": {
    "eslint": "*"
  }
}
